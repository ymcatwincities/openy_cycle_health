{{ attach_library('twelve_app/bursts') }}

{% if debug %}
  {{ error_message }}
{% endif %}

<div id="twelve_day_progress_app">
  <Bursts
    :debug='{{ debug|json_encode }}'
    :error_message='{{ error_message|json_encode }}'
    :completion_url='{{ completion_url|json_encode }}'
    :game_nid='{{ game_nid }}'
    :progress_nid='{{ progress_nid }}'
    :finished_exercises='{{ finished_items|json_encode }}'
    :exercise_list='{{ exercises|json_encode }}'
    :badges_list='{{ badges|json_encode }}'
  ></Bursts>
</div>
